<% if (USUARIO && USUARIO.admin) { %>
<!-- Modal Editar -->
<div class="modal fade" id="alteraPedidoModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <form class="modal-content text-black" method="post">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Editar Status</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <label class="copy-h6-format">Status Atual</label>
        <div class="my-1 mb-4" id="statusAtual"></div>

        <label class="copy-h6-format">Novo Status</label>
        <select class="form-select my-1" id="selectStatus" name="statusPedidoId">
          <!-- preenche via JS -->
        </select>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sair</button>
        <input type="hidden" name="pedidoId" id="pedidoId" />
        <button type="submit" class="btn btn-outline-success">Salvar</button>
      </div>
    </form>
  </div>
</div>
<!-- fim Modal Editar -->
<% } %>
