<%- include('../components/head', {title: 'Minha Conta: Alterar Senha'}) %> <%- include('../components/navbar') %>

<section>
  <div class="corpo container-fluid text-branco">
    <div class="row g-1">

      <%- include('../components/minha-conta/lateral-menu') %>

      <div class="col-sm px-3">

        <h4>Alterar Senha</h4>      
        <hr class="mb-3">

        <form method="post" action="/usuarios/alterar-senha?_method=PUT" class="m-w-800" data-toggle="validator">
          <div class="row g-3 mb-4">
            <div class="col-sm">
              <label class="copy-h6-format text-white">Senha atual</label>
              <input type="password" name="senhaAtual" class="form-control" placeholder="Digite a senha atual" required />
            </div>
          </div>

          <div class="row g-3 mb-2">
            <div class="col-sm">
              <label for="email" class="copy-h6-format text-white">Novo Senha</label>
              <input type="password" name="senha" id="senha" class="form-control" placeholder="Crie sua nova senha" minlength="6" required />
            </div>
            <div class="col-sm">
              <label class="copy-h6-format text-white">Confirmar</label>
              <input
                type="password"
                name="confirmSenha"
                class="form-control"
                placeholder="Confirme a nova senha"
                required
                data-match="#senha"
                data-match-error="Atenção! As senhas não estão iguais."
              />
              <div class="help-block with-errors mt-3"></div>
            </div>
          </div>
          <%- include('../components/error-alert', {error}) %>
          <div class="my-3"><button type="submit" class="btn btn-primary">Alterar</button></div>
        </form>

      </div>
    </div>
  </div>
</section>

<%- include('../components/foot') %>
