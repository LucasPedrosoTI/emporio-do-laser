<%- include('../components/head', {title: 'Minha Conta: Cadastrar novo Endereço'}) %> <%- include('../components/navbar') %>

<section>
  <div class="corpo ">
    <div class="page-grid">
      
      <nav>
        <%- include('../components/minha-conta/lateral-menu') %>
      </nav>

      <div class="container-conteudo">

        <h2 class="title mb-5">Cadastrar Endereço</h2>     

        <form method="post" action="/usuarios/cadastrar-endereco">

          <div class="row g-3 mb-2">
            <div class="col-sm-6">
              <label class="font-18-bold text-white">Destinatário</label>
              <input type="text" name="destinatario" class="form-control" placeholder="Ex: Minha Casa">
            </div>
          </div>

          <div class="row g-3 mb-2">
            <div class="col-sm-5">
              <label class="font-18-bold text-white">Rua</label>
              <input type="text" name="rua" class="form-control" placeholder="Ex: Rua Tuiuti">
            </div>
            <div class="col-sm-2">
              <label class="font-18-bold text-white">Nº</label>
              <input type="text" name="numero" class="form-control" placeholder="Ex: 50">
            </div>
            <div class="col-sm">
              <label class="font-18-bold text-white">Complemento</label>
              <input type="text" name="complemento" class="form-control" placeholder="Ex: apto. 35">
            </div>
            <div class="col-sm">
              <label class="font-18-bold text-white">Bairro</label>
              <input type="text" name="bairro" class="form-control" placeholder="Ex: Tatuapé">
            </div>
          </div>

          <div class="row g-3 mb-4">
            <div class="col-sm-7">
              <label class="font-18-bold text-white">Cidade</label>
              <input type="text" name="cidade" class="form-control" placeholder="Ex: São Paulo" aria-label="City">
            </div>
            <div class="col-sm">
              <label class="font-18-bold text-white">Estado</label>
              <input type="text" name="estado" class="form-control" placeholder="Ex: SP" aria-label="State">
            </div>
            <div class="col-sm">
              <label class="font-18-bold text-white">Cep</label>
              <input type="text" name="cep" class="form-control" placeholder="Ex: 00000-000" aria-label="Zip">
            </div>
          </div>

          <button class="btn btn-primary" type="submit">Salvar</button>

        </form>

      </div>

    </div>
  </div>
</section>

<%- include('../components/foot') %>
