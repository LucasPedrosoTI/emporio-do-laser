<%- include('../components/head', {title: 'Minha Conta: Dados'}) %> <%- include('../components/navbar') %>

<style>

  .bs-dados {
    border: 1px solid black;
    color: black;
  }

  .bs-dados:hover {
    color: black;
  }

  .bs-pedidos,
  .bs-creditos,
  .bs-email,
  .bs-senha,
  .bs-enderecos,
  .bs-cartoes  
  {
    border: 1px solid #e5e5e5;
    color: #999;
  }
  
  .bs-pedidos:hover {
    color: #999;
  }
  .bs-creditos:hover {
    color: #999;
  }
  .bs-email:hover {
    color: #999;
  }
  .bs-senha:hover {
    color: #999;
  }
  .bs-enderecos:hover {
    color: #999;
  }
  .bs-cartoes:hover {
    color: #999;
  }

  .email {
    margin-left: 350px;
    margin-right: 10px;
    margin-top: -600px;
    height: 584px;
  }

  .email-title {
    color: white;
    font-size: 30px;
    font: bold;
    border-bottom: solid 1px white;
    padding: 0;

  }

  .caixa {
    margin-top: 39px;
    display: inline-flex;
    width: 100%;
    text-align: center;
    color: #999;
  }

  .subtitulos {
    margin-top: 20px;
    font-size: 20px;
    color: white;
  }

  .caixa-senha {
    width: 400px;
    height: 40px;
    border-radius: 5px;
    border: solid 1px lightgray;
    padding-left: 15px;
  }

  .btn-gravar {
    color: white;
    border: 0;
    border-radius: 5px;
    height: 40px;
    width: 400px;
    margin-left: 40px;
    background-color: rgb(13, 110, 253);
  }

  .btn-gravar:hover {
    background-color: rgb(11, 94, 215);
    color: white;
    border: 0;
  }

  .caixa1 {
    display: inline-flex;
    margin-top: 5px;
    /* margin-bottom: 8px; */
    margin-right: 30px;
  }



  .espaco {
    margin-right: 300px;
  }

  .btnradio1 {
    margin-left: 40px;
  }

  .btnradio {
    color: white;
    margin-right: 5px;
    margin-left: 10px;
    font-size: 22px;
  }

  .esp-rg {
    margin-left: 113px;
  }

  .esp-tel {
    margin-left: -10px;
  }

  .distancia {
    margin-left: 40px;
  }
</style>

<div class="corpo">
  <section>

    <%- include('../components/minha-conta/lateral-menu') %>

    <div class="email">
      <ul class="email-title"><strong>Meus Dados</strong></ul>
      <div class="componentes">
        <div class="caixa1">
          <p class="subtitulos espaco">Nome Completo</p>
          <p class="subtitulos espaco">Gênero</p>
        </div>

        <div class="caixa2">
          <input type="text" name="nome" class="caixa-senha magin-senha" />
          <input type="radio" name="sex" class="btnradio1" /><b class="btnradio">F</b>
          <input type="radio" name="sex" class="btnradio" /><b class="btnradio">M</b>
        </div>

        <div class="caixa1">
          <p class="subtitulos espaco">CPF</p>
          <p class="subtitulos espaco esp-rg">RG</p>
        </div>

        <div class="caixa2">
          <input type="text" name="cpf" class="caixa-senha" onkeypress="$(this).mask('000.000.000-00')" />
          <input type="number" name="rg" class="caixa-senha distancia" />
        </div>

        <div class="caixa1">
          <p class="subtitulos espaco">Telefone Principal</p>
          <p class="subtitulos espaco esp-tel">Telefone Secundário</p>
        </div>

        <div class="caixa2">
          <input type="tel" name="telefone" class="caixa-senha" />
          <input type="tel" name="telefone2" class="caixa-senha distancia" />
        </div>

        <div class="caixa1">
          <p class="subtitulos espaco">Data de Nascimento</p>
        </div>

        <div class="caixa2">
          <input type="date" name="birthday" class="caixa-senha" />
          <button type="submit" class="btn-gravar">Salvar Dados</button>
        </div>
      </div>
    </div>
    
  </section>
</div>

<%- include('../components/foot') %>
