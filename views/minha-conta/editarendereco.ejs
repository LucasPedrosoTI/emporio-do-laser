<%- include('../components/head', {title: 'Minha Conta: Editar Endereço'}) %> <%- include('../components/navbar') %>

<div class="corpo">
  <section>
    <%- include('../components/minha-conta/lateral-menu') %>

    <div class="cadastro">
      <ul class="cadastro-title">
        <strong>Editar Endereço</strong>
      </ul>
      <div class="componentes">
        <div class="caixa1">
          <p class="subtitulos espaco">Nome do Destinatário</p>
          <p class="subtitulos espaco esp-cep">CEP</p>
          <a href="https://buscacepinter.correios.com.br/app/endereco/index.php" class="subtitulos">Não sabe seu CEP?</a>
        </div>

        <div class="caixa2">
          <input type="text" name="nome" class="caixas margens" />
          <input type="text" name="cep" class="caixas distancia" onkeypress="$(this).mask('00.000-00')" />
        </div>

        <div class="caixa1">
          <p class="subtitulos espaco">Número</p>
          <p class="subtitulos espaco esp-comp">Complemento</p>
        </div>

        <div class="caixa2">
          <input type="text" name="num" class="caixas" />
          <input type="text" name="complemento" class="caixas distancia" />
        </div>

        <div class="caixa1">
          <p class="subtitulos espaco">Referência</p>
        </div>

        <div class="caixa2">
          <input type="text" name="salvar-endereco" class="caixas" />
          <button type="submit" class="btn-gravar-dados">Salvar Endereço</button>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../components/foot') %>
